# Shopify Admin API Access Token (from your Shopify admin)
SHOPIFY_ADMIN_API_TOKEN=

# Shopify Store Name (e.g., your-store.myshopify.com)
SHOPIFY_SHOP_NAME=

# Public Shop Domain for Product Links (e.g., shop.yourdomain.com or yourdomain.com)
# This is used to generate "View on Shopify" links in the product detail view
# If not set, the "View on Shopify" button will not appear

SHOPIFY_SHOP_DOMAIN=
