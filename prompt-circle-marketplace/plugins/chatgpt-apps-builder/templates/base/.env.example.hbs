# {{appName}} - Environment Variables
#
# Copy this file to .env and fill in the values.
# The server uses dotenv to load these automatically.
#
# For local overrides (not committed to git), create .env.local

# =============================================================================
# Server Configuration
# =============================================================================

# Port for HTTP server (default: 3000)
PORT=3000

# Run mode: true for HTTP server, false for stdio (MCP Inspector)
HTTP_MODE=false

# Environment: development, production, test
NODE_ENV=development

{{#if database}}
# =============================================================================
# Supabase Configuration
# =============================================================================

# Local Development (run ./setup.sh to auto-configure)
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Production (get from Supabase dashboard)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_KEY=your-production-service-key
# SUPABASE_ANON_KEY=your-production-anon-key
{{/if}}

{{#if auth.auth0}}
# =============================================================================
# Auth0 Configuration
# =============================================================================

# Your Auth0 tenant domain
AUTH0_DOMAIN=your-tenant.auth0.com

# Application credentials (from Auth0 dashboard)
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# Optional: API identifier for token audience
# AUTH0_AUDIENCE=your-api-identifier

# Public URL for OAuth callbacks (for development with ngrok)
# PUBLIC_URL=https://your-ngrok-domain.ngrok-free.app
{{/if}}

{{#if auth.supabase}}
# =============================================================================
# Supabase Auth
# =============================================================================
# Supabase Auth uses the SUPABASE_* variables above.
# Additional configuration:
# SUPABASE_JWT_SECRET=your-jwt-secret
{{/if}}

{{#each externalApis}}
# =============================================================================
# {{name}}
# =============================================================================
{{#each envVars}}
{{this}}=
{{/each}}

{{/each}}
# =============================================================================
# Widget Configuration (Optional)
# =============================================================================

# Custom domain for widget sandbox (for production)
# WIDGET_DOMAIN=https://widgets.your-domain.com

# Content Security Policy - additional domains to allow
# WIDGET_CSP_CONNECT_DOMAINS=api.example.com,cdn.example.com
