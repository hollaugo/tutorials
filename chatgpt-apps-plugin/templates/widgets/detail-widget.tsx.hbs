// {{pascalCase name}} Detail Widget
// Generated by chatgpt-apps-builder plugin
//
// A detail widget for viewing/editing a single {{name}}
// with action buttons and metadata display.

import React, { useState, useEffect } from "react";
import { createRoot } from "react-dom/client";
import {
  useToolOutput,
  useWidgetState,
  useWidgetContext,
} from "../hooks";
import { cn, formatDate, formatDateTime } from "../lib/utils";
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
  CardFooter,
  Button,
  Badge,
  Input,
  Textarea,
  Label,
  Select,
  SelectTrigger,
  SelectValue,
  SelectContent,
  SelectItem,
  Alert,
  AlertDescription,
  Skeleton,
} from "../components/ui";
import {
  Pencil,
  Trash2,
  ArrowLeft,
  Save,
  X,
  Loader2,
  AlertCircle,
} from "lucide-react";

// =============================================================================
// Types
// =============================================================================

interface {{pascalCase name}}Data {
  id: string;
  {{#each fields}}
  {{name}}: {{type}};
  {{/each}}
  createdAt: string;
  updatedAt?: string;
}

interface DetailOutput {
  {{name}}: {{pascalCase name}}Data;
}

interface DetailState {
  isEditing: boolean;
}

// =============================================================================
// Component
// =============================================================================

function {{pascalCase name}}DetailWidget() {
  const { callTool, sendFollowUp, requestDisplayMode } = useWidgetContext();
  const toolOutput = useToolOutput<DetailOutput>();
  const [state, setState] = useWidgetState<DetailState>({ isEditing: false });

  const [item, setItem] = useState<{{pascalCase name}}Data | null>(null);
  const [draft, setDraft] = useState<Partial<{{pascalCase name}}Data>>({});
  const [saving, setSaving] = useState(false);
  const [deleting, setDeleting] = useState(false);
  const [error, setError] = useState<string | null>(null);

  // Hydrate from tool output
  useEffect(() => {
    if (toolOutput?.{{name}}) {
      setItem(toolOutput.{{name}});
      setDraft(toolOutput.{{name}});
    }
  }, [toolOutput]);

  const handleBack = async () => {
    await sendFollowUp("Show the {{name}} list");
    await requestDisplayMode("inline");
  };

  const handleEdit = () => {
    setState({ isEditing: true });
    setError(null);
  };

  const handleCancel = () => {
    setDraft(item || {});
    setState({ isEditing: false });
    setError(null);
  };

  const handleSave = async () => {
    if (!item) return;
    setSaving(true);
    setError(null);

    try {
      await callTool("update-{{kebabCase name}}", {
        id: item.id,
        {{#each editableFields}}
        {{name}}: draft.{{name}},
        {{/each}}
      });

      setItem({ ...item, ...draft } as {{pascalCase name}}Data);
      setState({ isEditing: false });
    } catch (err) {
      setError(err instanceof Error ? err.message : "Failed to save changes");
    } finally {
      setSaving(false);
    }
  };

  const handleDelete = async () => {
    if (!item) return;
    if (!confirm("Are you sure you want to delete this {{name}}?")) return;

    setDeleting(true);
    setError(null);

    try {
      await callTool("delete-{{kebabCase name}}", { id: item.id });
      await sendFollowUp("Show the {{name}} list");
    } catch (err) {
      setError(err instanceof Error ? err.message : "Failed to delete");
      setDeleting(false);
    }
  };

  if (!item) {
    return (
      <div className="widget-container p-4 bg-background text-foreground">
        <Card>
          <CardContent className="p-6">
            <Skeleton className="h-8 w-1/2 mb-4" />
            <Skeleton className="h-4 w-full mb-2" />
            <Skeleton className="h-4 w-3/4 mb-2" />
            <Skeleton className="h-4 w-1/2" />
          </CardContent>
        </Card>
      </div>
    );
  }

  return (
    <div className="widget-container p-4 bg-background text-foreground">
      <Card>
        <CardHeader>
          <div className="flex items-start justify-between">
            <div className="flex-1">
              {state.isEditing ? (
                <Input
                  value={draft.{{primaryField}} || ""}
                  onChange={(e) =>
                    setDraft({ ...draft, {{primaryField}}: e.target.value })
                  }
                  className="text-2xl font-semibold"
                  disabled={saving}
                />
              ) : (
                <CardTitle className="text-2xl">{item.{{primaryField}}}</CardTitle>
              )}
              {{#if statusField}}
              <div className="mt-2">
                {state.isEditing ? (
                  <Select
                    value={draft.{{statusField}} || ""}
                    onValueChange={(v) => setDraft({ ...draft, {{statusField}}: v })}
                    disabled={saving}
                  >
                    <SelectTrigger className="w-[180px]">
                      <SelectValue />
                    </SelectTrigger>
                    <SelectContent>
                      {{#each statusOptions}}
                      <SelectItem value="{{value}}">{{label}}</SelectItem>
                      {{/each}}
                    </SelectContent>
                  </Select>
                ) : (
                  <Badge
                    variant={
                      item.{{statusField}} === "{{completedStatus}}"
                        ? "success"
                        : item.{{statusField}} === "{{pendingStatus}}"
                        ? "warning"
                        : "secondary"
                    }
                  >
                    {item.{{statusField}}}
                  </Badge>
                )}
              </div>
              {{/if}}
            </div>

            {/* Action Buttons */}
            <div className="flex items-center gap-2">
              {state.isEditing ? (
                <>
                  <Button
                    variant="ghost"
                    size="sm"
                    onClick={handleCancel}
                    disabled={saving}
                  >
                    <X className="h-4 w-4 mr-1" />
                    Cancel
                  </Button>
                  <Button size="sm" onClick={handleSave} disabled={saving}>
                    {saving ? (
                      <Loader2 className="h-4 w-4 mr-1 animate-spin" />
                    ) : (
                      <Save className="h-4 w-4 mr-1" />
                    )}
                    Save
                  </Button>
                </>
              ) : (
                <>
                  <Button variant="ghost" size="sm" onClick={handleBack}>
                    <ArrowLeft className="h-4 w-4 mr-1" />
                    Back
                  </Button>
                  <Button variant="outline" size="sm" onClick={handleEdit}>
                    <Pencil className="h-4 w-4 mr-1" />
                    Edit
                  </Button>
                  <Button
                    variant="destructive"
                    size="sm"
                    onClick={handleDelete}
                    disabled={deleting}
                  >
                    {deleting ? (
                      <Loader2 className="h-4 w-4 mr-1 animate-spin" />
                    ) : (
                      <Trash2 className="h-4 w-4 mr-1" />
                    )}
                    Delete
                  </Button>
                </>
              )}
            </div>
          </div>
        </CardHeader>

        <CardContent className="space-y-6">
          {error && (
            <Alert variant="destructive">
              <AlertCircle className="h-4 w-4" />
              <AlertDescription>{error}</AlertDescription>
            </Alert>
          )}

          {{#each contentFields}}
          <div>
            <Label className="text-muted-foreground">{{label}}</Label>
            {state.isEditing ? (
              {{#if (eq inputType "textarea")}}
              <Textarea
                value={draft.{{name}} || ""}
                onChange={(e) =>
                  setDraft({ ...draft, {{name}}: e.target.value })
                }
                rows={4}
                disabled={saving}
                className="mt-1"
              />
              {{else}}
              <Input
                value={draft.{{name}} || ""}
                onChange={(e) =>
                  setDraft({ ...draft, {{name}}: e.target.value })
                }
                disabled={saving}
                className="mt-1"
              />
              {{/if}}
            ) : (
              <p className="mt-1 whitespace-pre-wrap">
                {item.{{name}} || (
                  <span className="text-muted-foreground italic">Not set</span>
                )}
              </p>
            )}
          </div>
          {{/each}}
        </CardContent>

        <CardFooter className="border-t pt-4">
          <div className="text-sm text-muted-foreground">
            <p>Created: {formatDateTime(item.createdAt)}</p>
            {item.updatedAt && (
              <p>Last updated: {formatDateTime(item.updatedAt)}</p>
            )}
          </div>
        </CardFooter>
      </Card>
    </div>
  );
}

// =============================================================================
// Mount
// =============================================================================

const container = document.getElementById("{{kebabCase name}}-detail-root");
if (container) {
  const root = createRoot(container);
  root.render(<{{pascalCase name}}DetailWidget />);
}

export default {{pascalCase name}}DetailWidget;
