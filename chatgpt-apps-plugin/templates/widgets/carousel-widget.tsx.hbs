// {{pascalCase name}} Carousel Widget
// Generated by chatgpt-apps-builder plugin
//
// A carousel widget for browsing {{name}} items
// with swipe gestures and navigation controls.

import React, { useState, useEffect, useRef, useCallback } from "react";
import { createRoot } from "react-dom/client";
import useEmblaCarousel from "embla-carousel-react";
import {
  useToolOutput,
  useWidgetState,
  useWidgetContext,
} from "../hooks";
import { cn } from "../lib/utils";
import {
  Card,
  CardContent,
  Button,
  Badge,
  Skeleton,
} from "../components/ui";
import { ChevronLeft, ChevronRight, Maximize2 } from "lucide-react";

// =============================================================================
// Types
// =============================================================================

interface {{pascalCase name}}Item {
  id: string;
  {{#each fields}}
  {{name}}: {{type}};
  {{/each}}
}

interface CarouselOutput {
  items: {{pascalCase name}}Item[];
  title?: string;
}

interface CarouselState {
  currentIndex: number;
}

// =============================================================================
// Component
// =============================================================================

function {{pascalCase name}}CarouselWidget() {
  const { callTool, requestDisplayMode } = useWidgetContext();
  const toolOutput = useToolOutput<CarouselOutput>();
  const [state, setState] = useWidgetState<CarouselState>({ currentIndex: 0 });

  const [items, setItems] = useState<{{pascalCase name}}Item[]>([]);
  const [loading, setLoading] = useState(false);
  const hydratedRef = useRef(false);

  // Embla carousel setup
  const [emblaRef, emblaApi] = useEmblaCarousel({
    loop: true,
    startIndex: state.currentIndex,
  });

  const [canScrollPrev, setCanScrollPrev] = useState(false);
  const [canScrollNext, setCanScrollNext] = useState(false);

  // Update scroll buttons state
  const onSelect = useCallback(() => {
    if (!emblaApi) return;
    setCanScrollPrev(emblaApi.canScrollPrev());
    setCanScrollNext(emblaApi.canScrollNext());
    setState({ currentIndex: emblaApi.selectedScrollSnap() });
  }, [emblaApi, setState]);

  useEffect(() => {
    if (!emblaApi) return;
    onSelect();
    emblaApi.on("select", onSelect);
    emblaApi.on("reInit", onSelect);
    return () => {
      emblaApi.off("select", onSelect);
      emblaApi.off("reInit", onSelect);
    };
  }, [emblaApi, onSelect]);

  // Hydrate from tool output
  useEffect(() => {
    if (!hydratedRef.current && toolOutput?.items) {
      setItems(toolOutput.items);
      hydratedRef.current = true;
    }
  }, [toolOutput]);

  const scrollPrev = useCallback(() => {
    emblaApi?.scrollPrev();
  }, [emblaApi]);

  const scrollNext = useCallback(() => {
    emblaApi?.scrollNext();
  }, [emblaApi]);

  const handleItemClick = async (item: {{pascalCase name}}Item) => {
    await callTool("show-{{kebabCase name}}-detail", { id: item.id });
    await requestDisplayMode("fullscreen");
  };

  const handleFullscreen = async () => {
    await requestDisplayMode("fullscreen");
  };

  if (loading) {
    return (
      <div className="widget-container p-4 bg-background text-foreground">
        <div className="flex gap-4 overflow-hidden">
          {[1, 2, 3].map((i) => (
            <Skeleton key={i} className="h-64 w-64 flex-shrink-0 rounded-lg" />
          ))}
        </div>
      </div>
    );
  }

  if (items.length === 0) {
    return (
      <div className="widget-container p-8 bg-background text-foreground text-center">
        <p className="text-muted-foreground">No {{name}}s to display</p>
      </div>
    );
  }

  return (
    <div className="widget-container p-4 bg-background text-foreground">
      {/* Header */}
      <div className="flex items-center justify-between mb-4">
        <h2 className="text-lg font-semibold">
          {toolOutput?.title || "{{titleCase name}}s"}
        </h2>
        <div className="flex items-center gap-2">
          <span className="text-sm text-muted-foreground">
            {state.currentIndex + 1} / {items.length}
          </span>
          <Button variant="ghost" size="icon" onClick={handleFullscreen}>
            <Maximize2 className="h-4 w-4" />
          </Button>
        </div>
      </div>

      {/* Carousel */}
      <div className="relative">
        <div className="overflow-hidden" ref={emblaRef}>
          <div className="flex gap-4">
            {items.map((item, index) => (
              <div
                key={item.id}
                className="flex-shrink-0 w-[280px]"
              >
                <Card
                  className={cn(
                    "cursor-pointer transition-all hover:shadow-lg",
                    state.currentIndex === index && "ring-2 ring-primary"
                  )}
                  onClick={() => handleItemClick(item)}
                >
                  {{#if imageField}}
                  {item.{{imageField}} && (
                    <div className="aspect-video overflow-hidden rounded-t-lg">
                      <img
                        src={item.{{imageField}}}
                        alt={item.{{primaryField}}}
                        className="w-full h-full object-cover"
                      />
                    </div>
                  )}
                  {{/if}}
                  <CardContent className="p-4">
                    <h3 className="font-medium truncate mb-1">
                      {item.{{primaryField}}}
                    </h3>
                    {{#if secondaryField}}
                    <p className="text-sm text-muted-foreground line-clamp-2">
                      {item.{{secondaryField}}}
                    </p>
                    {{/if}}
                    {{#if badgeField}}
                    <Badge variant="secondary" className="mt-2">
                      {item.{{badgeField}}}
                    </Badge>
                    {{/if}}
                  </CardContent>
                </Card>
              </div>
            ))}
          </div>
        </div>

        {/* Navigation Buttons */}
        <Button
          variant="outline"
          size="icon"
          className="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-1/2 rounded-full shadow-lg"
          onClick={scrollPrev}
          disabled={!canScrollPrev}
        >
          <ChevronLeft className="h-4 w-4" />
        </Button>
        <Button
          variant="outline"
          size="icon"
          className="absolute right-0 top-1/2 -translate-y-1/2 translate-x-1/2 rounded-full shadow-lg"
          onClick={scrollNext}
          disabled={!canScrollNext}
        >
          <ChevronRight className="h-4 w-4" />
        </Button>
      </div>

      {/* Dots Indicator */}
      <div className="flex justify-center gap-2 mt-4">
        {items.map((_, index) => (
          <button
            key={index}
            className={cn(
              "w-2 h-2 rounded-full transition-colors",
              state.currentIndex === index
                ? "bg-primary"
                : "bg-muted hover:bg-muted-foreground/50"
            )}
            onClick={() => emblaApi?.scrollTo(index)}
          />
        ))}
      </div>
    </div>
  );
}

// =============================================================================
// Mount
// =============================================================================

const container = document.getElementById("{{kebabCase name}}-carousel-root");
if (container) {
  const root = createRoot(container);
  root.render(<{{pascalCase name}}CarouselWidget />);
}

export default {{pascalCase name}}CarouselWidget;
