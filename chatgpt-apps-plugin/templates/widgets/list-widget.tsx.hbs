//
// A list widget for displaying collections of {{name}} items
// with selection, filtering, and action capabilities.

import React, { useState, useEffect, useRef } from "react";
import { createRoot } from "react-dom/client";
import {
  useToolOutput,
  useWidgetState,
  useWidgetContext,
} from "../hooks";
import { cn, formatDate } from "../lib/utils";
import {
  Card,
  CardContent,
  Button,
  Badge,
  Input,
  Skeleton,
} from "../components/ui";
import { Plus, Search, RefreshCw } from "lucide-react";

// =============================================================================
// Types
// =============================================================================

interface {{pascalCase name}}Item {
  id: string;
  {{#each fields}}
  {{name}}: {{type}};
  {{/each}}
  createdAt: string;
  updatedAt?: string;
}

interface ListOutput {
  items: {{pascalCase name}}Item[];
  total?: number;
}

interface ListState {
  selectedId?: string;
  searchQuery: string;
}

// =============================================================================
// Component
// =============================================================================

function {{pascalCase name}}ListWidget() {
  const { theme, callTool, sendFollowUp, requestDisplayMode } = useWidgetContext();
  const toolOutput = useToolOutput<ListOutput>();
  const [state, setState] = useWidgetState<ListState>({ searchQuery: "" });

  const [items, setItems] = useState<{{pascalCase name}}Item[]>([]);
  const [loading, setLoading] = useState(false);
  const hydratedRef = useRef(false);

  // Hydrate from tool output once
  useEffect(() => {
    if (!hydratedRef.current && toolOutput?.items) {
      setItems(toolOutput.items);
      hydratedRef.current = true;
    }
  }, [toolOutput]);

  // Filter items based on search
  const filteredItems = items.filter((item) => {
    if (!state.searchQuery) return true;
    const query = state.searchQuery.toLowerCase();
    return (
      {{#each searchableFields}}
      item.{{this}}?.toLowerCase().includes(query){{#unless @last}} ||{{/unless}}
      {{/each}}
    );
  });

  const handleRefresh = async () => {
    setLoading(true);
    try {
      const result = await callTool<{ structuredContent: ListOutput }>(
        "list-{{kebabCase name}}s",
        {}
      );
      if (result?.structuredContent?.items) {
        setItems(result.structuredContent.items);
      }
    } finally {
      setLoading(false);
    }
  };

  const handleItemClick = async (item: {{pascalCase name}}Item) => {
    setState({ ...state, selectedId: item.id });
    await callTool("show-{{kebabCase name}}-detail", { id: item.id });
    await requestDisplayMode("fullscreen");
  };

  const handleCreate = async () => {
    await callTool("show-create-{{kebabCase name}}", {});
    await requestDisplayMode("fullscreen");
  };

  return (
    <div className="widget-container min-h-[200px] p-4 bg-background text-foreground">
      {/* Header */}
      <div className="flex items-center justify-between mb-4">
        <h2 className="text-lg font-semibold">
          {{titleCase name}}s
          {items.length > 0 && (
            <span className="ml-2 text-sm font-normal text-muted-foreground">
              ({filteredItems.length})
            </span>
          )}
        </h2>
        <div className="flex items-center gap-2">
          <Button
            variant="ghost"
            size="icon"
            onClick={handleRefresh}
            disabled={loading}
          >
            <RefreshCw className={cn("h-4 w-4", loading && "animate-spin")} />
          </Button>
          <Button onClick={handleCreate} size="sm">
            <Plus className="h-4 w-4 mr-1" />
            New
          </Button>
        </div>
      </div>

      {/* Search */}
      {items.length > 5 && (
        <div className="relative mb-4">
          <Search className="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-muted-foreground" />
          <Input
            placeholder="Search..."
            value={state.searchQuery}
            onChange={(e) => setState({ ...state, searchQuery: e.target.value })}
            className="pl-9"
          />
        </div>
      )}

      {/* List */}
      {loading ? (
        <div className="space-y-3">
          {[1, 2, 3].map((i) => (
            <Card key={i}>
              <CardContent className="p-4">
                <Skeleton className="h-5 w-3/4 mb-2" />
                <Skeleton className="h-4 w-1/2" />
              </CardContent>
            </Card>
          ))}
        </div>
      ) : filteredItems.length === 0 ? (
        <div className="text-center py-12 text-muted-foreground">
          {items.length === 0 ? (
            <>
              <p className="mb-2">No {{name}}s yet</p>
              <Button onClick={handleCreate} variant="outline" size="sm">
                Create your first {{name}}
              </Button>
            </>
          ) : (
            <p>No results found for "{state.searchQuery}"</p>
          )}
        </div>
      ) : (
        <div className="space-y-2">
          {filteredItems.map((item) => (
            <Card
              key={item.id}
              className={cn(
                "cursor-pointer transition-colors hover:bg-accent/50",
                state.selectedId === item.id && "ring-2 ring-primary"
              )}
              onClick={() => handleItemClick(item)}
            >
              <CardContent className="p-4">
                <div className="flex items-start justify-between">
                  <div className="flex-1 min-w-0">
                    <h3 className="font-medium truncate">
                      {item.{{primaryField}}}
                    </h3>
                    {{#if secondaryField}}
                    <p className="text-sm text-muted-foreground truncate mt-1">
                      {item.{{secondaryField}}}
                    </p>
                    {{/if}}
                    <p className="text-xs text-muted-foreground mt-2">
                      {formatDate(item.createdAt)}
                    </p>
                  </div>
                  {{#if statusField}}
                  <Badge
                    variant={
                      item.{{statusField}} === "{{completedStatus}}"
                        ? "success"
                        : item.{{statusField}} === "{{pendingStatus}}"
                        ? "warning"
                        : "secondary"
                    }
                  >
                    {item.{{statusField}}}
                  </Badge>
                  {{/if}}
                </div>
              </CardContent>
            </Card>
          ))}
        </div>
      )}
    </div>
  );
}

// =============================================================================
// Mount
// =============================================================================

const container = document.getElementById("{{kebabCase name}}-list-root");
if (container) {
  const root = createRoot(container);
  root.render(<{{pascalCase name}}ListWidget />);
}

export default {{pascalCase name}}ListWidget;
